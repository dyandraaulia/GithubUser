<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_grey</item>
    </style>

    <style name="MySearchBarTheme" parent="Widget.Material3.SearchBar">
        <item name="android:gravity">center|start</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="MyTabLayoutTheme" parent="Widget.Material3.TabLayout.Secondary">
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="colorPrimary">@color/light_grey</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <!--      REGULAR INTER      -->
    <style name="TextContent.regular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <!--      MEDIUM INTER      -->
    <style name="TextContent.medium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.medium.18">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--      BOLD INTER      -->
    <style name="TextContent.bold">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.GithubUser" parent="Base.Theme.GithubUser" />
</resources>